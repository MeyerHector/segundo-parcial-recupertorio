<%- include('partials/header') %>


    <div class="container">

        <div class="row mt-5">
            <h1 class="text-center border-botton">Lista de Reservas</h1>
            <div class="col">
                <div class="col-md-3 mb-2">
                    <a href="/nueva-reserva" class="btn btn sm btn-primary" id>Nuevo </a>
                    <a href="/" class="btn btn-info text-light">Inicio</a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>DNI</th>
                            <th>Ida</th>
                            <th>Vuelta</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="listaReservas">
                        <% reservas.forEach(function(reserva){ %>
                            <tr>
                                <td>
                                    <%= reserva.codigo %>
                                </td>
                                <td>
                                    <%= reserva.nombre %>
                                </td>
                                <td>
                                    <%= reserva.apellido %>
                                </td>
                                <td>
                                    <%= reserva.dni %>
                                </td>
                                <td>
                                    <%= reserva.fechaIda %>
                                </td>
                                <td>
                                    <%= reserva.fechaVuelta %>
                                </td>
                                <td>
                                    $ <%= reserva.precio %>
                                </td>
                                <td>
                                    <a class="btn btn-danger">Eliminar</a>
                                    <a href="/actualizar-reserva/<%= reserva.id %>" class="btn btn-warning">Editar</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <%- include('partials/footer') %>